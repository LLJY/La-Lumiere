<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapse_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">
        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="1"
            app:sliderStartAutoCycle="true" />
    </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.ItemActivity">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginStart="8dp"
                android:text="Test Title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/title_text"
                android:layout_marginStart="8dp"
                android:textSize="20sp"
                android:text="$24"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/image_card"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/item_price_text"
                app:layout_constraintStart_toStartOf="@id/item_price_text"
                app:cardCornerRadius="100dp">
                <ImageView
                    android:id="@+id/seller_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </androidx.cardview.widget.CardView>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/seller_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some Seller"
                app:layout_constraintTop_toTopOf="@id/image_card"
                app:layout_constraintBottom_toBottomOf="@id/image_card"
                app:layout_constraintStart_toEndOf="@id/image_card"
                android:layout_marginStart="4dp"/>
            <View android:id="@+id/divider_title"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seller_name_text"
                android:background="?android:attr/dividerVertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"/>
            <ImageView
                android:id="@+id/likes_image"
                android:src="@drawable/ic_favorite_red_24dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_title"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/likes_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="24 Likes"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/likes_image"
                app:layout_constraintTop_toTopOf="@id/likes_image"
                app:layout_constraintBottom_toBottomOf="@id/likes_image"/>
            <ImageView
                android:id="@+id/used_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintTop_toBottomOf="@id/likes_image"
                app:layout_constraintEnd_toEndOf="@id/likes_image"
                app:layout_constraintStart_toStartOf="@id/likes_image"
                android:src="@drawable/ic_help_black_24dp"
                android:layout_marginTop="12dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/used_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Used test"
                app:layout_constraintTop_toTopOf="@id/used_image"
                app:layout_constraintBottom_toBottomOf="@id/used_image"
                app:layout_constraintStart_toEndOf="@id/used_image"
                android:layout_marginStart="4dp"/>
            <ImageView
                android:id="@+id/category_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintTop_toBottomOf="@id/used_image"
                app:layout_constraintStart_toStartOf="@id/used_image"
                app:layout_constraintEnd_toEndOf="@id/used_image"
                android:src="@drawable/ic_menu_grey_24dp"
                android:layout_marginTop="12dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/category_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@id/category_image"
                app:layout_constraintBottom_toBottomOf="@id/category_image"
                app:layout_constraintStart_toEndOf="@id/category_image"
                android:layout_marginStart="4dp"
                android:text="placeholder category"/>
            <ImageView
                android:id="@+id/desc_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_format_align_left_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/category_image"
                app:layout_constraintStart_toStartOf="@id/category_image"
                app:layout_constraintEnd_toEndOf="@id/category_image" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/desc_text"
                android:layout_marginStart="4dp"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/desc_image"
                app:layout_constraintTop_toTopOf="@id/desc_image"
                app:layout_constraintBottom_toBottomOf="@id/desc_image"
                android:text="placeholder description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View android:id="@+id/transaction_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/desc_text"
                android:background="?android:attr/dividerVertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="42dp"/>
            <com.google.android.material.textview.MaterialTextView
                app:layout_constraintBottom_toTopOf="@+id/transaction_divider"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Details"/>
            <ImageView
                android:id="@+id/location_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintTop_toBottomOf="@id/transaction_divider"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="placeholder location"
                app:layout_constraintTop_toTopOf="@id/location_image"
                app:layout_constraintBottom_toBottomOf="@id/location_image"
                app:layout_constraintStart_toEndOf="@id/location_image"
                android:layout_marginStart="4dp"/>
            <ImageView
                android:id="@+id/payment_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintTop_toBottomOf="@id/location_image"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/location_image"
                app:layout_constraintEnd_toEndOf="@id/location_image"
                android:src="@drawable/ic_credit_card_black_24dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/payment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/payment_image"
                app:layout_constraintTop_toTopOf="@id/payment_image"
                app:layout_constraintBottom_toBottomOf="@id/payment_image"
                android:layout_marginStart="4dp"
                android:text="placeholder payment type"/>
            <View android:id="@+id/see_more_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/payment_text"
                android:background="?android:attr/dividerVertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="42dp"/>
            <com.google.android.material.textview.MaterialTextView
                app:layout_constraintBottom_toTopOf="@+id/see_more_divider"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See more like this"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/see_more_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/see_more_divider"
                android:layout_marginTop="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
<include
    android:id="@+id/bottom_sheet"
    layout="@layout/back_bottomsheet"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>